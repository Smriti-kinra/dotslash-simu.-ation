{
  "manifest_version": 3,
  "name": "GLB Animations Player",
  "version": "1.0",
  "description": "Play animations from .glb files in your animations folder.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["animations/*.glb"],
      "matches": ["<all_urls>"]
    }
  ]
}
