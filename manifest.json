{
    "manifest_version": 3,
    "name": "Babylon.js Animation Viewer",
    "description": "A Chrome extension that displays 3D animations from .glb files using Babylon.js",
    "version": "1.0",
    "permissions": [
      "activeTab"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icons/icon.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "icons": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  }
  